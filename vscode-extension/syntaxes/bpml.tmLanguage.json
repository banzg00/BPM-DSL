{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BPML",
  "scopeName": "source.bpml",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#types"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.bpml",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bpml",
          "match": "\\b(project|process|entity|role|state|task|transition)\\b"
        },
        {
          "name": "keyword.other.bpml",
          "match": "\\b(name|description|version|author|supervises|from|to|by|in|affects|depends_on|auto)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.bpml",
          "match": "\\b(int|float|string|boolean|enum)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.bpml",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.bpml",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.type.bpml",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.bpml",
          "match": "\\b[a-z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.bpml",
          "match": "[{}:,\\[\\]]"
        }
      ]
    }
  }
}
